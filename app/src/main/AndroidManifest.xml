<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuv.retrofitapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".kotlin_mvvm.activities.MoviesActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MoviesSplashScreenActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchMovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MovieDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoviesGridViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoviesHomeScreenActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".NotificationReceivers" />
    </application>

</manifest>